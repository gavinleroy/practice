#include <iostream>
#include <string>
using namespace std;

void lol(void)
{
	string str;
	cin >> str;
	if(str.size() > 2)
	{
		cout << str[0] << str.size() - 2 << str[str.size() - 1] << endl;
	}
	else
	{
		cout << str << endl;
	}
}

int main(void){
	int j;
	cin >> j;
	for(int i = 0; i < j; i++)
	{
		lol();
	}
	return 0;
}
